<record id="view_ed_mentor_subsc_form" model="ir.ui.view">
	            <field name="name">view_ed_mentor_form</field>
	            <field name="model">ed.subscription</field> 
	            <field name="type">form</field>
	            <field name="arch" type="xml">
	            	
	                <form string="Subscription Form">
	                	<header>
	                		
	                		<button name="action_confirm" states="pending" string="Confirm" type="object" icon="gtk-confirm" confirm="Are you sure you want to continue?"/>
	                		<button name="button_cancel" states="confirmed,closed" string="Cancel" type="object" icon="gtk-cancel" />
	                		<button name="button_set_to_draft" states="cancel,closed" string="Set to Draft" type="object" icon="terp-stock_effects-object-colorize" />
	                		<field name="state" widget="statusbar" statusbar_visible="pending,confirmed,cancel,closed" />
	                	</header>
			  				 <group col='8' colspan='4'>
	                           <group col='4' colspan='2'>
		 							<field colspan='4' name="partner_id" context="{'mentor':1}" domain="[('ed_sh_complem','!=',True)]" on_change="onchange_Partner(partner_id)"/>
	                           		<field name="term" on_change="onchange_Terms(start_date,term)" colspan='2'/>
	                           		<field name="no_issues" colspan='2'/>
	                           </group>
	                           <group col='4' colspan='2'>
			                		<field name="sub_no" readonly="1"/>
		  							<field name="start_date" on_change="onchange_Terms(start_date,term)"/>
		                            <field name="no_copies"/>
		  							<field name="end_date"/>
	                           </group>
	                       </group>
	                       <group col="4">
	                        <notebook>
			                  <page string="Personal Information">
					            <group col='4' colspan='2'>                 
			                    <field name="name" required="1"/> 
			                    <field name="dob"/>
			                    <field name="tenure"/>
			                    <field name="resi_add"/>
			                    <field name="contact_no"/>
			                    <field name="email"/>
			                    <field name="edu_bkgrnd"/>
			                    <field name='receive_addr' required="1" on_change="onchange_ReceiveType(receive_addr,partner_id)"/>
	                            </group>
			                    
			                  </page>  
			                  <page string="Payment Details">
			                  	<group col="4" colspan="2">
			                  	  <field name="amount" />
			                  	  <field name="bank" />
			                  	  <field name="paymnt_date" />
			                  	  <field name="payment_type"/>
			                  	  <field name="chck_num" />
			                  	</group>
			                  </page>
			                  </notebook>
			               </group>   
			            
	                	
		              </form>
		              
		        </field>
</record>

