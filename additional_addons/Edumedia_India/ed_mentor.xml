		<record id="view_ed_advert_form" model="ir.ui.view">
	            <field name="name">view_ed_advert_form</field>
	            <field name="model">ed.advertisers</field> 
	            <field name="type">form</field>
	            <field name="arch" type="xml">
	                <form string="Advertisers" col='1'>
	                	<header>
	                		<button colspan="2" name="action_confirm" states="pending" string="Confirm" type="object" icon="gtk-confirm" confirm="Are you sure you want to continue?"/>
	                		<button  colspan="2" name="button_cancel" states="confirmed,closed" string="Cancel" type="object" icon="gtk-cancel"/>
